<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="9.10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:background="@drawable/bg_bestsellers"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProduct1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant" />

            <ImageView
                android:id="@+id/ivProduct2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProduct3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:src="@drawable/cold_and_juices" />

            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6.5dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/bg_product"
                android:text="+1"
                android:textColor="@color/black"
                android:textSize="23.4sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/llProductImages"
        app:layout_constraintStart_toStartOf="@id/llProductImages"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.9dp"
            android:text="Milk, Curd and Paneer"
            android:textColor="@color/black"
            android:textSize="14.3sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.9dp"
            android:text="4 products"
            android:textColor="#847F7F"
            android:textSize="14.3sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.9dp"
            android:padding="5.2dp"
            android:gravity="center"
            android:text="See All"
            android:textColor="@color/green"
            android:textSize="14.3sp"
            android:textStyle="bold"
            android:background="@drawable/bg_see_all" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>